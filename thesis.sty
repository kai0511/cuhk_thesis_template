\newcommand{\note}[2]{%
	%\vspace*{3mm}
	\begin{center}
	\framebox[13cm][t]{%
		\hspace*{3mm}
		\parbox[t]{12cm}{%
			\vspace*{2mm}
			\centerline{\bf #1}\vspace*{-2mm}
			\rule{12cm}{0.5mm} 
			%\def\baselinestretch{\setspace@singlespace}% line spacing takes effect after font change
			\reset@font
			\\#2
		}
	}
	\end{center}
	\vspace*{3mm}
}

\newcounter{mydefcounter}[chapter]

\newcommand{\mydef}[1]{%
	\stepcounter{mydefcounter}
	\note{Definition \thechapter.\themydefcounter}{#1}
}

